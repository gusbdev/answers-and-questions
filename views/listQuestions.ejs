<%- include ('./partials/header.ejs'); %>
<body>
  <%- include ('./partials/navbar.ejs'); %>
  <div class="container" id="form-question">
    <div class="card">
      <div class="card-header">
        <h3>Ask a question</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/savequestion">
          <label for="">Title</label>
          <input
            type="text"
            name="title"
            placeholder="Title"
            class="form-control"
          />
          <br />
          <label for="">Description</label>
          <textarea
            name="description"
            placeholder="Describe your question here"
            class="form-control"
          ></textarea>
          <br />
          <button class="btn btn-dark">Ask</button>
        </form>
      </div>
    </div>
  </div>
</body>
